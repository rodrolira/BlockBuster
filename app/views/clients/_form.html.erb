<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div>
      <h2><%= pluralize(client.errors.count, "error") %> prohibido guardar a este cliente:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre", style: "display: block"%>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age, "Edad", style: "display: block" %>
    <%= form.text_field :age %>
  </div>

  <div>
    <%= form.submit "Guardar Cambios", class:'btn btn-yellow mt-3'%>
  </div>
<% end %>
